@page
@model RenderOPML.Pages.FavoritesModel
@{
    ViewData["Title"] = "Favorite Feeds";
}

<!DOCTYPE html>
<html>
<head>
    <title>Favorite Feeds</title>
</head>
<body>
    <div class="container">
        <h1>Favorite Feeds</h1>
        <ul class="list-group mt-4">
            @foreach (var item in Model.FavoriteFeedItems)
            {
                <li class="list-group-item mb-3 mt-3">
                    <h2>@item.Text</h2>
                    <a href="RenderXML?xmlUrl=@item.XmlUrl" class="btn btn-primary">Read More</a>
                </li>
            }
        </ul>
    </div>
</body>
</html>
